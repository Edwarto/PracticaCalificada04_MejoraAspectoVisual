<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/cv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nombrePersona"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:layout_centerHorizontal="true"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/fotoPersona"
                android:layout_below="@id/nombrePersona"
                android:paddingTop="10dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edadPersona"
                android:layout_below="@id/fotoPersona"
                android:layout_centerHorizontal="true"/>
            <Button
                style = "@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_centerHorizontal="true"
                android:text="@string/ver_detalles"
                android:textSize="20sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_below="@id/edadPersona"
                android:id="@+id/btnVerDetalles"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
